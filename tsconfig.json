{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2021",
    "esModuleInterop": true,
    "declarationMap": true,
    "lib": ["es2021"],
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "composite": false,
    "outDir": "dist"
  }
}
